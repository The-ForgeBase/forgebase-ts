{
  "compilerOptions": {
    "target": "ES2020",
    "moduleDetection": "force",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
