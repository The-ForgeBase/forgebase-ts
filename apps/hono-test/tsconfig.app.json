{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "ES2020",
    "types": ["node"],
    "target": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    // "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
