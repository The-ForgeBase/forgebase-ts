{
  "name": "@the-forgebase/auth",
  "version": "0.0.0-alpha.22",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "dev": "pnpm build:esm --watch",
    "lint": "tsc --noEmit"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./adapters/nest": {
      "types": "./dist/esm/adapters/nest/index.d.ts",
      "import": "./dist/esm/adapters/nest/index.js",
      "require": "./dist/cjs/adapters/nest/index.js"
    },
    "./adapters/web": {
      "types": "./dist/esm/adapters/web/index.d.ts",
      "import": "./dist/esm/adapters/web/index.js",
      "require": "./dist/cjs/adapters/web/index.js"
    },
    "./adapters/express": {
      "types": "./dist/esm/adapters/express/index.d.ts",
      "import": "./dist/esm/adapters/express/index.js",
      "require": "./dist/cjs/adapters/express/index.js"
    },
    "./adapters/ultimate-express": {
      "types": "./dist/esm/adapters/ultimate-express/index.d.ts",
      "import": "./dist/esm/adapters/ultimate-express/index.js",
      "require": "./dist/cjs/adapters/ultimate-express/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@the-forgebase/typescript-config": "workspace:*",
    "tslib": "^2.8.1"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0",
    "@nestjs/core": "^11.1.0",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@the-forgebase/common": "workspace:*",
    "arctic": "^3.6.1",
    "awilix": "^12.0.5",
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "itty-router": "^5.0.18",
    "jsonwebtoken": "^9.0.2",
    "jsx-email": "^2.7.2",
    "knex": "^3.1.0",
    "knex-mock-client": "^3.0.2",
    "nodemailer": "^7.0.3",
    "qrcode": "^1.5.4",
    "react": "^19.1.0",
    "rfc4648": "^1.5.4",
    "speakeasy": "^2.0.0",
    "twilio": "^5.6.0",
    "typescript": "5.8.2",
    "ultimate-express": "^1.4.9",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  }
}
