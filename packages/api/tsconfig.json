{
  "extends": "@the-forgebase/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "composite": true,
    "types": ["node"],
    "strict": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
