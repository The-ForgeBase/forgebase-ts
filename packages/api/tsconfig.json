{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "types": ["node"],
    "strict": false,
    "esModuleInterop": true,
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "module": "ES2020",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
