{
  "name": "@forgebase/api",
  "version": "0.0.3",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsup --format esm --outdir dist/esm",
    "build:cjs": "tsup --format cjs --outdir dist/cjs",
    "build": "pnpm clean && tsup",
    "dev": "pnpm build:esm --watch",
    "lint": "tsc --noEmit"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./core/nest": {
      "import": {
        "types": "./dist/core/nest/index.d.ts",
        "default": "./dist/core/nest/index.js"
      },
      "require": {
        "types": "./dist/core/nest/index.d.cts",
        "default": "./dist/core/nest/index.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/index.js"
      },
      "require": {
        "types": "./dist/core/index.d.cts",
        "default": "./dist/core/index.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "core/nest": [
        "./dist/core/nest/index.d.ts"
      ],
      "core": [
        "./dist/core/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@forgebase/database": "workspace:*"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "express": "^5.2.1",
    "itty-router": "^5.0.22",
    "kysely": "^0.28.11",
    "ultimate-express": "^2.0.17"
  },
  "devDependencies": {
    "@forgebase/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "~18.16.9",
    "tsup": "^8.5.1",
    "tslib": "^2.8.1",
    "typescript": "5.8.2"
  }
}
